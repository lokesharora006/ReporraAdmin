<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:padding="24dp"
    android:scrollbars="none"
    tools:context=".view.activities.CompanySetupActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        >

        <!-- App Logo -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:contentDescription="App Logo"
            android:src="@drawable/adminapplogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="2dp"
            />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-medium"
            android:text="Register Company"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivLogo"
            />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Enter company details to proceed"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            />

        <!-- Decorative Bar -->
        <View
            android:id="@+id/decorativeBar"
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/gradient_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            />

        <!-- Company Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCompanyName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Company Name"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/decorativeBar"
            app:startIconDrawable="@drawable/ic_business"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Company Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCompanyEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Company Email"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilCompanyName"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_company_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Company Phone -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCompanyPhone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Company Phone"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilCompanyEmail"
            app:startIconDrawable="@drawable/ic_phone"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_company_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Company State -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCompanyState"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="State"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilCompanyPhone"
            app:startIconDrawable="@drawable/ic_location"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_company_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Headquarter City -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCompanyCity"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Headquarter City"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilCompanyState"
            app:startIconDrawable="@drawable/ic_location"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_company_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- GST Number -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCompanyGst"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="GST Number"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilCompanyCity"
            app:startIconDrawable="@drawable/ic_verified"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_company_gst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter 15-digit GSTIN"
                android:inputType="textCapCharacters"
                android:maxLength="15"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Save Company Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveCompany"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="Save Company"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/button_color"
            app:cornerRadius="16dp"
            app:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilCompanyGst"
            app:rippleColor="@color/button_ripple"
            />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:indeterminateTint="@android:color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/btnSaveCompany"
            app:layout_constraintEnd_toEndOf="@id/btnSaveCompany"
            app:layout_constraintStart_toStartOf="@id/btnSaveCompany"
            app:layout_constraintTop_toTopOf="@id/btnSaveCompany"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>