<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="none"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        >

        <!-- Logo -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logoContainer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/adminapplogo"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="2dp"
            />

        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/logoContainer"
            app:layout_constraintEnd_toEndOf="@id/logoContainer"
            app:layout_constraintStart_toStartOf="@id/logoContainer"
            app:layout_constraintTop_toTopOf="@id/logoContainer"
            />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:text="Admin Information"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoContainer"
            />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="Complete your admin profile"
            android:textColor="@color/gray_text"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            />

        <!-- Decorative Line -->
        <View
            android:id="@+id/decorativeLine"
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/gradient_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitleText"
            />

        <!-- First Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstNameInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:hint="First Name"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:hintTextColor="@color/gray_text"
            app:layout_constraintEnd_toStartOf="@+id/lastNameInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/decorativeLine"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_admin_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName|textCapWords"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Last Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lastNameInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:hint="Last Name"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:hintTextColor="@color/gray_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/firstNameInputLayout"
            app:layout_constraintTop_toBottomOf="@id/decorativeLine"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_admin_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName|textCapWords"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Email Address"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:hintTextColor="@color/gray_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/firstNameInputLayout"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_admin_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phoneInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Phone Number"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:hintTextColor="@color/gray_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailInputLayout"
            app:startIconDrawable="@drawable/ic_phone"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_admin_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:inputType="phone"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Company Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/companyNameInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Company Name"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:hintTextColor="@color/gray_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phoneInputLayout"
            app:startIconDrawable="@drawable/ic_business"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- State Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/stateInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="State"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:hintTextColor="@color/gray_text"
            app:layout_constraintEnd_toStartOf="@+id/headquarterInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/companyNameInputLayout"
            app:startIconDrawable="@drawable/ic_location"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_admin_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Headquarter City Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/headquarterInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:hint="Headquarter City"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:hintTextColor="@color/gray_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/stateInputLayout"
            app:layout_constraintTop_toBottomOf="@id/companyNameInputLayout"
            app:startIconDrawable="@drawable/ic_location"
            app:startIconTint="@color/gray_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_admin_headquarter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Complete Setup Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCompleteSetup"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/button_color"
            android:elevation="8dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:text="Complete Setup"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stateInputLayout"
            app:rippleColor="@color/button_ripple"
            />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminateTint="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/btnCompleteSetup"
            app:layout_constraintEnd_toEndOf="@id/btnCompleteSetup"
            app:layout_constraintStart_toStartOf="@id/btnCompleteSetup"
            app:layout_constraintTop_toTopOf="@id/btnCompleteSetup"
            tools:visibility="visible"
            />

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnCompleteSetup"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>